{
   "$schema": "https://json.schemastore.org/claude-code-settings.json",
   "cleanupPeriodDays": 99999,
   "env": {
      "DISABLE_BUG_COMMAND": "1",
      "DISABLE_ERROR_REPORTING": "1",
      "DISABLE_NON_ESSENTIAL_MODEL_CALLS": "1",
      "DISABLE_TELEMETRY": "1"
   },
   "includeCoAuthoredBy": false,
   "permissions": {
      "allow": [
         "Bash(beans:*)",
         "Bash(beanup:*)",
         "Bash(git:*)",
         "Bash(go build:*)",
         "Bash(go clean:*)",
         "Bash(go doc:*)",
         "Bash(go get:*)",
         "Bash(go list:*)",
         "Bash(go mod graph:*)",
         "Bash(go mod init:*)",
         "Bash(go mod tidy:*)",
         "Bash(go mod why:*)",
         "Bash(go run:*)",
         "Bash(go test:*)",
         "Bash(go version:*)",
         "Bash(go vet:*)",
         "Bash(gofmt:*)",
         "Bash(golangci-lint cache:*)",
         "Bash(golangci-lint run:*)",
         "Bash(golangci-lint:*)",
         "Bash(gopls check:*)",
         "Bash(gopls version:*)",
         "Bash(gh * list:*)",
         "Bash(gh * view:*)",
         "Bash(gh api:*)",
         "Bash(gh issue create:*)",
         "Bash(gh issue view:*)",
         "Bash(gh pr close:*)",
         "Bash(gh repo view:*)",
         "Bash(gh run list:*)",
         "Bash(gh run view:*)",
         "Bash(gh run watch:*)",
         "Bash(gh release download:*)",
         "Bash(gh pr create:*)",
         "Bash(ls:*)",
         "Bash(tree:*)",
         "Bash(wc:*)",
         "Bash(mise install:*)",
         "Bash(mise ls:*)",
         "Bash(mise run:*)",
         "Bash(mise tasks:*)",
         "Bash(mise which:*)",
         "Bash(bq query:*)",
         "Bash(bq *)",
         "Bash(shellcheck:*)",
         "Edit(path:.**/.beans/**)",
         "Edit(path:.**/.claude/**)",
         "Skill(skill-creator)",
         "Skill(github:gha)",
         "WebFetch(domain:github.com)",
         "WebFetch(domain:golangci-lint.run)",
         "WebFetch(domain:mise.jdx.dev)",
         "WebFetch(domain:cloud.google.com)",
         "WebFetch(domain:docs.github.com)",
         "WebSearch",
         "Write(path:.**/.beans/**)",
         "Write(path:.**/.claude/skills/**)"
      ],
      "additionalDirectories": [
         "/Users/jason/Developer/toba/homebrew-go-bigq"
      ],
      "deny": [
         "Bash(git reset --hard:*)",
         "Bash(npm i --global:*)",
         "Bash(npm i -g:*)",
         "Bash(npm install --global:*)",
         "Bash(npm install -g:*)",
         "Bash(pip:*)",
         "Bash(pip3:*)",
         "Bash(open:*)"
      ]
   },
   "sandbox": {
      "enabled": false,
      "autoAllowBashIfSandboxed": true
   },
   "spinnerTipsEnabled": false,
   "alwaysThinkingEnabled": true
}
